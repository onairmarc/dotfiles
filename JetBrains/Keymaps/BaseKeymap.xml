<keymap version="1" name="MB Base Keymap" parent="VSCode">
  <!-- Basic Editing -->
  <action id="$Copy">
    <keyboard-shortcut first-keystroke="ctrl c" />
    <keyboard-shortcut first-keystroke="meta c" />
  </action>
  <action id="$Cut">
    <keyboard-shortcut first-keystroke="ctrl x" />
    <keyboard-shortcut first-keystroke="meta x" />
  </action>
  <action id="$Paste">
    <keyboard-shortcut first-keystroke="ctrl v" />
    <keyboard-shortcut first-keystroke="meta v" />
  </action>
  <action id="$Redo">
    <keyboard-shortcut first-keystroke="ctrl y" />
    <keyboard-shortcut first-keystroke="shift ctrl z" />
    <keyboard-shortcut first-keystroke="shift alt back_space" />
    <keyboard-shortcut first-keystroke="shift meta z" />
  </action>
  <action id="$SelectAll">
    <keyboard-shortcut first-keystroke="ctrl a" />
    <keyboard-shortcut first-keystroke="meta a" />
  </action>
  <action id="$Undo">
    <keyboard-shortcut first-keystroke="ctrl z" />
    <keyboard-shortcut first-keystroke="alt back_space" />
    <keyboard-shortcut first-keystroke="meta z" />
  </action>

  <!-- Editor Actions -->
  <action id="EditorCut">
    <keyboard-shortcut first-keystroke="meta x" />
  </action>
  <action id="EditorDeleteLine">
    <keyboard-shortcut first-keystroke="shift ctrl k" />
  </action>
  <action id="EditorDuplicateLines">
    <keyboard-shortcut first-keystroke="shift meta d" />
  </action>
  <action id="EditorLineStart">
    <keyboard-shortcut first-keystroke="home" />
    <keyboard-shortcut first-keystroke="meta left" />
  </action>
  <action id="EditorLineEnd">
    <keyboard-shortcut first-keystroke="end" />
    <keyboard-shortcut first-keystroke="meta right" />
  </action>
  <action id="MoveLineUp">
    <keyboard-shortcut first-keystroke="alt up" />
    <keyboard-shortcut first-keystroke="meta up" />
  </action>
  <action id="MoveLineDown">
    <keyboard-shortcut first-keystroke="alt down" />
    <keyboard-shortcut first-keystroke="meta down" />
  </action>

  <!-- Tool Windows -->
  <action id="ActivateCommitToolWindow">
    <keyboard-shortcut first-keystroke="meta g" />
  </action>
  <action id="ActivateTerminalToolWindow">
    <keyboard-shortcut first-keystroke="ctrl t" />
  </action>
  <action id="ActivateVersionControlToolWindow">
    <keyboard-shortcut first-keystroke="shift ctrl g" />
    <keyboard-shortcut first-keystroke="shift meta g" />
  </action>

  <!-- Navigation and Search -->
  <action id="Vcs.QuickListPopupAction">
    <keyboard-shortcut first-keystroke="alt back_quote" />
  </action>
</keymap>